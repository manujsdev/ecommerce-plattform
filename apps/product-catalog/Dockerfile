FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system product-catalog && \
          adduser --system -G product-catalog product-catalog

COPY dist/apps/product-catalog product-catalog/
